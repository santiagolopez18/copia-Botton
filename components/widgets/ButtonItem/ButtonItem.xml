<?xml version = "1.0" encoding = "utf-8" ?>

<component name = "ButtonItem" extends = "Group" >
  <interface>

    <field id="itemContent" type="node" onChange = "onItemContentChanged" />
    <field id="itemHasFocus" type="Boolean" onChange = "onItemFocusChanged"/>
    
  </interface>

  <script type="text/brightscript" uri="ButtonItem.brs"/>

  <children >
  
      <poster
        id = "background"
        width = "250"
        height = "64"
        uri = "pkg:/images/Button-Unfocused.png"/>

      <poster
        id = "focus"
        visible = "false"
        width = "250"
        height = "64"
        uri = "pkg:/images/Button.png"/>

      <label
        id = "label"
        translation = "[10,10]"
        text = ""
        font = "font:MediumBoldSystemFont"/>

  </children>

</component>